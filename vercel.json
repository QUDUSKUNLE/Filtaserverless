{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.go",
      "use": "@vercel/go"
    }
  ],
  "routes": [
    { "src": "/analyse", "methods": ["POST"], "dest": "/api/analyse" },
    { "src": "/status", "methods": ["GET"], "dest": "/api/status" },
    { "src": "/", "methods": ["GET"], "dest": "/api" }
  ]
}
